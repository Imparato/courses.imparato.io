<!-- insert meta information of page -->
<% content_for :meta do %>
  <title><%= @cross_page.meta_title %></title>
  <meta name="description" content= "<%= @cross_page.meta_description %>">
<% end %>

<!-- banner -->
<!-- <div class="banner"
  style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
         url('<%= cl_image_path @cross_page.banner%>')"> -->
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.2),rgba(0,0,0,0.1)), url('assets/photo_marseille.jpeg');">
  <div class="container">
    <h1><%= @cross_page.title %></h1>
    <p><%= @cross_page.description %></p>
  </div>
</div>


<div class="container">
<% @companies.each do |company| %>
  <div class="card-company">
    <%= image_tag("theatre#{company.id % 5}") %>
    <div class="card-company-info">
      <div class="card-company-tags">
        <% company.tags.each do |tag| %>
          <% if tag.name != @cross_page.slug %>
            <div class="company-tag">
            <%= tag.name.capitalize %>
            </div>
          <% else %>
            <div class="company-tag active">
            <%= tag.name.capitalize %>
            </div>
          <% end %>
        <% end %>
      </div>
      <h3 class="company-name"><%= company.name %></h3>
      <p><%= company.description %></p>
      <div>
        <p class="info-contact"><span><i class="fas fa-map-marker-alt"></i> <%= company.address %></span></p>
        <p class="info-contact"><span><i class="fas fa-envelope"></i> <%= company.mail %></span>
        <span><i class="fas fa-phone"></i> 06 09 73 67 23</span>
        <span><i class="fas fa-globe"></i>
          <%= link_to "https://theatresurcours.com", "https://theatresurcours.com" %></span></p>
      </div>
    </div>
  </div>
<% end %>
</div>
