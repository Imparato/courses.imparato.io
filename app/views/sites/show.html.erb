<% @companies.where(active: true).last(5).each do |company| %>
  <div class="card-company">
    <%= image_tag("theatre#{company.id % 5}") %>
    <div class="card-company-info">
      <div class="card-company-tags">
        <% company.tags.each do |tag| %>
          <div class="company-tag">
            <%= tag.name.capitalize %>
          </div>
        <% end %>
      </div>
      <h3 class="company-name"><%= company.name %></h3>
      <p><%= company.description %></p>
      <div>
        <p class="info-contact"><span><i class="fas fa-map-marker-alt"></i> <%= company.address %></span></p>
        <p class="info-contact"><span><i class="fas fa-envelope"></i> <%= company.mail %></span>
        <span><i class="fas fa-phone"></i> 06 09 73 67 23</span>
        <span><i class="fas fa-globe"></i>
          <%= link_to "https://theatresurcours.com", "https://theatresurcours.com" %></span></p>
      </div>
    </div>
  </div>
<% end %>

</div>

